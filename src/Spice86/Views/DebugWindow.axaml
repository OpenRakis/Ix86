        xmlns:dialogHost="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Spice86.Views.DebugWindow"
        Title="Debug"
        xmlns:vm="using:Spice86.ViewModels"
        xmlns:converters="clr-namespace:Spice86.Converters"
        xmlns:pgc="clr-namespace:Avalonia.PropertyGrid.Controls;assembly=Avalonia.PropertyGrid"
        xmlns:userControls="clr-namespace:Spice86.UserControls"
        xmlns:views="clr-namespace:Spice86.Views"
        x:CompileBindings="True" x:DataType="vm:DebugViewModel"
        Icon="/Assets/Spice86.ico"
        CanResize="True"
        WindowStartupLocation="CenterOwner"
        MinWidth="640" MinHeight="400" Width="800" Height="600" FontFamily="Inconsolata,Consolas,Monospace,Courier">
    <Design.DataContext>
        <vm:DebugViewModel />
    </Design.DataContext>
    <Window.Resources>
        <converters:InstructionToStringConverter x:Key="InstructionToStringConverter" />
    </Window.Resources>
    <Grid RowDefinitions="Auto,*">
        <Menu Grid.Row="0">
            <MenuItem Header="Edit">
                <MenuItem Header="Edit memory.." Command="{Binding EditMemoryCommand}" />
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1" RowDefinitions="*,Auto" IsVisible="{Binding !IsLoading}">
            <TabControl Grid.Row="0" SelectedIndex="{Binding SelectedTab, Mode=TwoWay}">
                <TabItem Header="CPU">
                    <ScrollViewer>
                        <WrapPanel>
                            <Grid RowDefinitions="Auto,*" Margin="5">
                                <Label HorizontalAlignment="Center" FontWeight="Bold">Registers and misc</Label>
                                <pgc:PropertyGrid Grid.Row="1" ShowTitle="False" ShowStyle="Alphabetic" SelectedObject="{CompiledBinding State}" />
                            </Grid>
                            <Grid RowDefinitions="Auto,*" Margin="5">
                                <Label HorizontalAlignment="Center" FontWeight="Bold">Flag Registers</Label>
                                <pgc:PropertyGrid Grid.Row="1" ShowTitle="False" ShowStyle="Alphabetic" SelectedObject="{CompiledBinding Flags}" />
                            </Grid>
                        </WrapPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Disassembly">
                    <Grid RowDefinitions="Auto,Auto,*">
                        <TextBlock IsVisible="{Binding !IsPaused}" Grid.Row="0" TextWrapping="Wrap" Text="Disassembly is only available if the emulator is paused, as it can be wrong otherwise. Also, updating it constantly while the emulator is running would make the UI unresponsive." />
                        <Grid Grid.ColumnDefinitions="Auto,Auto" IsVisible="{Binding IsPaused}" Grid.Row="0">
                            <TextBlock Grid.Column="0" Text="{Binding CurrentInstructionBitness, StringFormat='Current CPU Instruction Bitness: {0}'}" />
                            <Grid Grid.Column="1" Grid.ColumnDefinitions="Auto,Auto">
                                <TextBlock Grid.Column="0" Text="Number of instructions shown:" Margin="10, 0, 0, 0" />
                                <NumericUpDown Grid.Column="1" Value="{Binding NumberOfInstructionsShown}" />
                            </Grid>
                        </Grid>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button Content="Step" Command="{Binding StepCommand}" />
                        </StackPanel>
                        <DataGrid IsReadOnly="True" IsVisible="{Binding IsPaused}" Grid.Row="2" CanUserReorderColumns="True" CanUserResizeColumns="True" CanUserSortColumns="False" ItemsSource="{Binding Instructions}" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Address" Binding="{Binding MemoryLocation}" />
                                <DataGridCheckBoxColumn Header="Is at CS:IP?" Binding="{Binding IsCsIp}" />
                                <DataGridTextColumn Header="Disassembly (MASM)" Binding="{Binding Converter={StaticResource InstructionToStringConverter}}" />
                                <DataGridTextColumn Header="16-bit IP"  Binding="{Binding IP16}"/>
                                <DataGridTextColumn Header="32-bit IP" Binding="{Binding IP32}" />
                                <DataGridTextColumn Header="Segment Prefix" Binding="{Binding SegmentPrefix}" />
                                <DataGridTextColumn Header="Memory Segment" Binding="{Binding MemorySegment}" />
                                <DataGridCheckBoxColumn Header="Stack Instruction?" Binding="{Binding IsStackInstruction}" />
                                <DataGridCheckBoxColumn Header="Is IP relative?" Binding="{Binding IsIPRelativeMemoryOperand}" />
                                <DataGridTextColumn Header="IP relative memory address" Binding="{Binding IPRelativeMemoryAddress}" />
                                <DataGridTextColumn Header="Bytes" Binding="{Binding Bytes}" />
                                <DataGridTextColumn Header="Length" Binding="{Binding Length}" />
                                <DataGridTextColumn Header="FlowControl" Binding="{Binding FlowControl}" />
                            </DataGrid.Columns>
                            <TextElement.FontFamily>
                                <OnPlatform Default="{StaticResource RobotoMonoFont}">
                                    <On Options="Windows" Content="{StaticResource ConsolasFont}" />
                                </OnPlatform>
                            </TextElement.FontFamily>
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="Memory">
                    <ScrollViewer>
                        <userControls:HexSingleView Name="HexSingleView" MemorySource="{CompiledBinding MemoryStream}" />
                    </ScrollViewer>
                </TabItem>
