<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Spice86.Views.DebugWindow"
        Title="Debug"
        xmlns:vm="using:Spice86.ViewModels"
        xmlns:converters="clr-namespace:Spice86.Converters"
        xmlns:pgc="clr-namespace:Avalonia.PropertyGrid.Controls;assembly=Avalonia.PropertyGrid"
        xmlns:userControls="clr-namespace:Spice86.UserControls"
        x:CompileBindings="True" x:DataType="vm:DebugViewModel"
        Icon="/Assets/Spice86.ico"
        CanResize="True"
        WindowStartupLocation="CenterOwner"
        MinWidth="640" MinHeight="400" Width="800" Height="600" FontFamily="Inconsolata,Consolas,Monospace,Courier">
    <Design.DataContext>
        <vm:DebugViewModel />
    </Design.DataContext>
    <Window.Resources>
        <converters:InvalidNumberToQuestionMarkConverter x:Key="InvalidNumberToQuestionMarkConverter" />
    </Window.Resources>
    <Grid>
        <Grid RowDefinitions="*,Auto" IsVisible="{Binding !IsLoading}">
            <ScrollViewer Grid.Row="0" DockPanel.Dock="Top">
                <TabControl>
                    <TabItem Header="CPU">
                        <WrapPanel>
                            <Grid RowDefinitions="Auto,*" Margin="5">
                                <Label HorizontalAlignment="Center" FontWeight="Bold">State</Label>
                                <pgc:PropertyGrid Grid.Row="1" ShowTitle="False" ShowStyle="Alphabetic" SelectedObject="{CompiledBinding State}" />
                            </Grid>
                        </WrapPanel>
                    </TabItem>
                    <TabItem Header="Memory">
                        <userControls:HexSingleView Name="HexSingleView" MemorySource="{CompiledBinding Memory}" />
                    </TabItem>
                    <TabItem Header="Video Card">
                        <WrapPanel>
                            <Grid RowDefinitions="Auto,*" Margin="5">
                                <Label HorizontalAlignment="Center" FontWeight="Bold">State</Label>
                                <pgc:PropertyGrid Grid.Row="1" ShowTitle="False" ShowStyle="Alphabetic" SelectedObject="{CompiledBinding VideoCard}" />
                            </Grid>
                        </WrapPanel>
                    </TabItem>
                </TabControl>
            </ScrollViewer>
            <Border Grid.Row="1" Background="{StaticResource SystemChromeBlackHighColor}">
                <WrapPanel TextBlock.TextAlignment="Left" Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Bottom" Margin="0,0,5,0"
                               Text="{Binding LastUpdate, StringFormat='Last update: {0}'}">
                    </TextBlock>
                    <Button Margin="5,0,0,0" VerticalAlignment="Bottom" Content="Force Update"
                            Command="{Binding UpdateDataCommand}">
                    </Button>
                </WrapPanel>
            </Border>
        </Grid>
        <TextBlock Text="Loading..." IsVisible="{Binding IsLoading}"/>
    </Grid>
</Window>